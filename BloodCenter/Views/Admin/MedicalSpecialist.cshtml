@* @model  *@

@if (User.IsInRole("Admin"))
{
    <section class="section-container">
        <div class="container-text text-title">
            <h1>Медицински специалисти</h1>
        </div>

        <a class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="AddMedicalSpecialist">Добави медицински специалист</a>

        <table class="table">
            <tr>
                <th>Id</th>
                <th>Потребителско име</th>
                <th>Електронна поща</th>
                <th>Име</th>
                <th>Фамилия</th>
                <th>Oпции</th>
            </tr>
            @if (Model == null)
            {
                <p class="text-danger">Няма налични медицински специалисти.</p>
                return;
            }
            @foreach (var medicalSpecialist in Model)
            {
                <tr>
                    <th>@medicalSpecialist.Id</th>
                    <th>@medicalSpecialist.User.UserName</th>
                    <th>@medicalSpecialist.User.Email</th>
                    <th>@medicalSpecialist.User.FirstName</th>
                    <th>@medicalSpecialist.User.LastName</th>
                    <th>
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="EditMedicalSpecialist" asp-route-id="@medicalSpecialist.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteBloodDonor" asp-route-id="@medicalSpecialist.Id">Delete</a>
                    </th>
                </tr>
            }
        </table>
    </section>
}