@model BloodCenter.Models.ViewModels.BloodDonorViewModel
@{
    ViewData["Title"] = "Добавяне на кръводарител";
}

<h1>@ViewData["Title"]</h1>

<section class="login-register-container">
    <div class="form-container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddBloodDonor">
                    <h2>Създаване на нов акаунт.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name" />
                        <label asp-for="UserName">Потребителско име</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="name" />
                        <label asp-for="FirstName">Име</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="surname" />
                        <label asp-for="LastName">Фамилия</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email">Електронна поща</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password">Парола</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @*BloodDonor Stuff*@
                    <div class="form-floating mb-3">
                        <input asp-for="Age" class="form-control" autocomplete="age" aria-required="true" />
                        <label asp-for="Age">Възраст</label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <select asp-for="BloodGroupsId"
                            asp-items="@ViewBag.BloodGroups"
                            class="form-select border-0 bg-transparent">
                        <option selected class="fw-bold">Изберете кръвна група</option>
                    </select>
                    <div class="form-floating mb-3">
                        <input asp-for="RhesusFactor" class="form-control" autocomplete="rhesus-factor" aria-required="true" />
                        <label asp-for="RhesusFactor">Резус-фактор</label>
                        <span asp-validation-for="RhesusFactor" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Contacts" class="form-control" autocomplete="contact" aria-required="true" />
                        <label asp-for="Contacts">Контакти</label>
                        <span asp-validation-for="Contacts" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Регистрация</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
