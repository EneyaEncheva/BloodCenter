@model BloodCenter.Models.ViewModels.BloodDonorViewModel
@{
    ViewData["Title"] = "Регистриране на кръводарител";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center text-danger fw-bold">@ViewData["Title"]</h2>
            <p class="text-center text-muted">Моля, попълнете всички полета</p>

            <form asp-action="AddBloodDonor">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                <!-- Потребителско име -->
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" autocomplete="username" placeholder="Потребителско име" />
                    <label asp-for="UserName">Потребителско име</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Имена (на един ред) -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" autocomplete="given-name" placeholder="Име" />
                            <label asp-for="FirstName">Име</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" class="form-control" autocomplete="family-name" placeholder="Фамилия" />
                            <label asp-for="LastName">Фамилия</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Имейл и парола (на един ред) -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                            <label asp-for="Email">Електронна поща</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" placeholder="Парола" />
                            <label asp-for="Password">Парола</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Възраст -->
                <div class="form-floating mb-3">
                    <input asp-for="Age" type="number" min="18" max="65" class="form-control" placeholder="Възраст" />
                    <label asp-for="Age">Възраст</label>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <!-- Кръвна група и резус-фактор (на един ред) -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="BloodGroupsId" class="form-label">Кръвна група</label>
                            <select asp-for="BloodGroupsId" asp-items="@ViewBag.BloodGroups" class="form-select">
                                <option value="">-- Изберете кръвна група --</option>
                            </select>
                            <span asp-validation-for="BloodGroupsId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="RhesusFactor" class="form-label">Резус-фактор</label>
                            <select asp-for="RhesusFactor" asp-items="@ViewBag.RhesusFactors" class="form-select">
                                <option value="">-- Изберете резус-фактор --</option>
                            </select>
                            <span asp-validation-for="RhesusFactor" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Контакти -->
                <div class="form-floating mb-3">
                    <input asp-for="Contacts" class="form-control" autocomplete="contact" placeholder="Контакти" />
                    <label asp-for="Contacts">Контакти</label>
                    <span asp-validation-for="Contacts" class="text-danger"></span>
                </div>

                <!-- Бутоните за регистрация и отказ -->
                <div class="text-center">
                    <button type="submit" class="btn btn-danger shadow-sm">Регистрация</button>
                    <a asp-action="AdminPanel" asp-controller="Admin" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
