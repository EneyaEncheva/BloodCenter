@model IEnumerable<DonationHistory>

@if (User.IsInRole("Admin"))
{
    <section class="section-container">
        <div class="container-text text-title">
            <h1>История</h1>
        </div>
        <a class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="AddDonation">Добави дарение</a>

        <table class="table">
            <tr>
                <th>Id</th>
                <th>Кръводарител</th>
                <th>Дата на дарение</th>
                <th>Количество</th>
                <th>Опции</th>
            </tr>

            @if (Model == null)
            {
                <p class="text-danger">Няма налични дарения.</p>
                return;
            }

            @foreach (var donationHistory in Model)
            {
                <tr>
                    <th>@donationHistory.Id</th>
                    <th>@donationHistory.BloodDonor</th>
                    <th>@donationHistory.DonationDate.ToShortDateString()</th>
                    <th>@donationHistory.Quantity ml</th>
                    <th>
                        @* <a class="btn btn-warning" asp-controller="Admin" asp-action="EditBloodDonor" asp-route-id="@donationHistory.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteBloodDonor" asp-route-id="@bloodDonor.Id">Delete</a> *@
                        @* <a class="btn btn-success" asp-action="AddDonation" asp-route-bloodDonorId="@donationHistory.Id">Добави дарение</a> *@

                    </th>
                </tr>
            }
        </table>
    </section>
}
