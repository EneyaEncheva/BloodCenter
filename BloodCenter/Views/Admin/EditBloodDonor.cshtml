@model BloodCenter.Models.ViewModels.BloodDonorViewModel

@{
    ViewData["Title"] = "Редактиране на кръводарител";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBloodDonor">
            <h2>Редактиране.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" required />
                <label asp-for="UserName">Потребителско име</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" required />
                <label asp-for="Email">Имейл</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" required />
                <label asp-for="FirstName">Име</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" required />
                <label asp-for="LastName">Фамилия</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" type="number" class="form-control" required min="18" />
                <label asp-for="Age">Възраст</label>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <select asp-for="BloodGroupsId"
                    asp-items="@ViewBag.BloodGroups"
                    class="form-select border-0 bg-transparent">
                <option selected class="fw-bold">Кръвна група</option>
            </select>

            <div class="form-group">
                <label asp-for="RhesusFactor"></label>
                <select asp-for="RhesusFactor" class="form-control">
                    <option value="+">Положителен (+)</option>
                    <option value="-" selected="@(Model.RhesusFactor == '-')">Отрицателен (-)</option>
                </select>
                <span asp-validation-for="RhesusFactor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contacts"></label>
                <input asp-for="Contacts" class="form-control" required />
                <label asp-for="Contacts">Контакти</label>
                <span asp-validation-for="Contacts" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

