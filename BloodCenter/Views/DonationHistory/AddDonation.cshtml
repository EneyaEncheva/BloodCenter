@model DonationViewModel

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center text-danger fw-bold">Добавяне на дарение</h2>
            <p class="text-center text-muted">Попълнете данните по-долу</p>

            <form asp-action="AddDonation" method="post">
                <div class="form-floating mb-3">
                    <select asp-for="BloodDonorId" asp-items="ViewBag.BloodDonors" class="form-select">
                        <option value="">-- Изберете кръводарител --</option>
                    </select>
                    <label for="BloodDonorId">Кръводарител</label>
                    <span asp-validation-for="BloodDonorId" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" min="405" max="450" asp-for="Quantity" class="form-control" placeholder="Количество (мл)" />
                    <label for="Quantity">Количество (мл)</label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-danger shadow-sm">Добави дарение</button>
                    <a asp-action="History" asp-controller="DonationHistory" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</div>
